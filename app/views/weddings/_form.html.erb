<div class="col-md-6">
  <%= form_for @wedding, :html => { :class => "form-horizontal wedding" } do |f| %>
  
    <% if @wedding.errors.any? %>
      <div id="error_expl" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@wedding.errors.count, "error") %> prohibited this wedding from being saved:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @wedding.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control' %>
      <%=f.error_span(:name) %>
    </div>
    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :date, :class => 'form-control', :id => 'datepicker' %>
      <%=f.error_span(:date) %>
    </div>
    <div class="form-group">
      <%= f.label :location %>
      <%= f.text_field :location, :class => 'form-control' %>
      <%=f.error_span(:location) %>
    </div>
    <div class="form-group">
      <%= f.label :expected_guests %>
      <%= f.text_field :expected_guests, :class => 'form-control' %>
      <%=f.error_span(:expected_guests) %>
    </div>
  
    <div class="form-group">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                weddings_path, :class => 'btn btn-default' %>
    </div>
  
  <% end %>
</div>
