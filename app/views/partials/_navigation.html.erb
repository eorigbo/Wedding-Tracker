<% if  controller_name == 'welcome'  && action_name == 'index' %>
  <div class="navbar navbar-inverse navbar-fixed-top"> <!-- Welcome page needs a fixed top -->
<% else %>
  <div class="navbar navbar-inverse navbar-static-top"> <!-- Other pages don't need a fixed top -->
<% end %>
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "Wedding Planner App", root_path, class: "navbar-brand", id: "logo" %>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "Link1", welcome_path, id: "link1"  %></li>
        <li><%= link_to "Link2", "/path2"  %></li>
        <li><%= link_to "Link3", "/path3"  %></li>
      </ul>
  		<ul class="nav navbar-right col-md-4 flush-right">
        <% if current_user %>
          <li class="col-md-4 pull-right signin_logout"><%= link_to('Logout', destroy_user_session_path,
          class: 'btn btn-primary', title: 'Logout', :method => :delete) %></li>
          <li class="col-md-6 center username">
            <%= link_to ('<i class="fa fa-user"></i> ' + truncate(current_user.full_name, length: 25)).html_safe,
            edit_user_registration_path, title: 'Edit Profile' %>
          </li>
          <!--li class="col-md-1"> </li-->
          
        <% else %>
          <li class="col-md-4 pull-right signin_logout">
            <%= link_to('Sign In', new_user_session_path, class: 'btn btn-signin', title: 'Sign In') %>
          </li>
          <li class="col-md-6 pull-right signin_logout">
            <%= link_to 'Create an Account', new_user_registration_path, class: 'btn btn-primary', title: 'Create an Account' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>