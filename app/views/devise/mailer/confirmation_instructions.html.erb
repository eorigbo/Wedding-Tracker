<table>
  <tr style="height: 20px; background-color: grey;">
    <td>Wedding Planner App</td>
  </tr>
  <tr>
    <td>
      <h3>
        <%= t('.greeting', :recipient => @resource.first_name, :default => "Welcome #{@resource.first_name}!") %>
      </h3>
      <%= t('.instruction', :default => "Please confirm your account email by clicking on the link below:") %>
    
      <%= link_to t('.action', :default => "Confirm my account"),
             confirmation_url(@resource, :confirmation_token => @token, locale: I18n.locale) %>
    </td>
  </tr>
  
</table>  

